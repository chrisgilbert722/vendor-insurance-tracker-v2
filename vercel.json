{
  "version": 2,
  "framework": "nextjs",
  "functions": {
    "src/pages/api/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 60,
      "memory": 512
    }
  },
  "builds": [
    {
      "src": "src/pages/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/pages/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
